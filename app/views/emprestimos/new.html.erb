<% content_for :title, t('.title') %>

<main class="content-container">
  <div class="page-header">
    <h1><%= t('.title_with_book', book_title: @livro.titulo) %></h1>
    <%= link_to t('livros.back_to_livros'), livros_path, class: "btn btn-secondary" %>
  </div>

  <div class="form-card">
    <%= form_with(model: [@livro, @emprestimo], class: "content-form") do |form| %>
      <%= render "shared/flash" %>

      <div class="form-group">
        <%= form.label :cpf, class: "form-label" %>
        <%= form.text_field :cpf, class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= form.label :password, t('activerecord.attributes.user.password'), class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Emprestar", class: "btn btn-primary" %>
        <%= link_to t('helpers.back'), livro_path(@livro), class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</main>