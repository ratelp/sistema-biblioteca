
<h1>Entrar</h1>


<%= form_with url: login_path, method: :post do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :role %>
  <%= f.select :role, options_for_select(["Admin", "Bibliotecario"]) %>
  <%= f.submit "Login" %>
<% end %>

