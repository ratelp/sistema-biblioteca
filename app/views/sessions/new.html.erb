<div class="login-container">
  <div class="login-card">
    <h1 class="login-title"><%= t('.title') %></h1>

    <%= render "shared/flash" %>

    <%= form_with url: login_path, method: :post, class: "login-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: t('.email_placeholder'), required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('activerecord.attributes.user.password'), class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: t('.password_placeholder'), required: true %>
      </div>

      <div class="form-group">
        <%= f.label :role, t('.login_as'), class: "form-label" %>
        <%= f.select :role, options_for_select([ "Admin", "Bibliotecario" ]), {}, class: "form-control" %>
      </div>

      <%= f.submit t('.submit'), class: "btn btn-primary" %>
    <% end %>

    <div class="devise-links">
      <%= link_to t('.forgot_password'), new_password_path(:bibliotecario) %>
    </div>
  </div>
</div>