<%= form_with(model: livro, class: "content-form") do |form| %>
  <%= render "shared/flash" %>

  <div class="form-group">
    <%= form.label :titulo, class: "form-label" %>
    <%= form.text_field :titulo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :autor, class: "form-label" %>
    <%= form.text_field :autor, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :categoria_id, class: "form-label" %>
    <%= form.select :categoria_id, @categorias.map { |pt| [pt.nome.titleize, pt.id] },
                                                     { prompt: "Selecione uma categoria" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :observacoes, class: "form-label" %>
    <%= form.text_area :observacoes, class: "form-control", rows: 4, maxlength: 300 %>
  </div>

  <div class="form-actions">
    <%= form.submit t('helpers.submit.submit', model: Livro.model_name.human), class: "btn btn-primary" %>
    <%= link_to t('livros.back_to_livros'), livros_path, class: "btn btn-danger" %>
  </div>
<% end %>
