<% content_for :title, @livro.titulo %>

<main class="content-container">
  <%= render "shared/flash" %>

  <div class="page-header">
    <h1><%= t('.title') %></h1>
    <%= link_to t('livros.back_to_livros'), livros_path, class: "btn btn-secondary" %>
  </div>

  <div class="details-card">
    <div class="details-item">
      <strong class="details-label"><%= Livro.human_attribute_name(:titulo) %>:</strong>
      <span class="details-value"><%= @livro.titulo %></span>
    </div>
    <div class="details-item">
      <strong class="details-label"><%= Livro.human_attribute_name(:autor) %>:</strong>
      <span class="details-value"><%= @livro.autor %></span>
    </div>
    <div class="details-item">
      <strong class="details-label"><%= Livro.human_attribute_name(:categoria) %>:</strong>
      <span class="details-value"><%= @livro.categoria.nome %></span>
    </div>
    <div class="details-item">
      <strong class="details-label"><%= Livro.human_attribute_name(:observacoes) %>:</strong>
      <span class="details-value"><%= @livro.observacoes.presence || "N/A" %></span>
    </div>
  </div>

  <div class="action-buttons">
    <%= link_to t('.edit'), edit_livro_path(@livro), class: "btn btn-primary" %>
    <%= link_to t('.lend'), new_livro_emprestimo_path(@livro), class: "btn btn-success" %>
    <%= button_to t('.destroy'), @livro, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: t('helpers.confirm.are_you_sure') } } %>
  </div>
</main>
