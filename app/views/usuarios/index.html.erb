<% content_for :title, t('.title') %>

<main class="content-container">
  <%= render "shared/flash" %>

  <div class="page-header">
    <h1><%= t('.title') %></h1>
    <%= link_to t('usuarios.new.title'), new_usuario_path, class: "btn btn-primary" %>
  </div>

  <%= form_with(url: usuarios_path, method: :get, local: true) do %>
    <%= label_tag :search, "Buscar: " %>
    <%= text_field_tag :search, params[:search], placeholder: "Procurar pelo CPF" %>
  <% end %>

  <table class="content-table">
    <thead>
      <tr>
        <th><%= Usuario.human_attribute_name(:name) %></th>
        <th><%= Usuario.human_attribute_name(:cpf) %></th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @usuarios.each do |usuario| %>
        <%= render "usuario_row", usuario: usuario %>
      <% end %>
    </tbody>
  </table>
</main>
