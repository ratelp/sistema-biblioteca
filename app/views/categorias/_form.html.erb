<%= form_with(model: categoria, class: "content-form") do |form| %>
  <% if categoria.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(categoria.errors.count, "error") %> prohibited this categoria from being saved:</h2>
      <ul>
        <% categoria.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit t('helpers.submit.submit', model: Categoria.model_name.human), class: "btn btn-primary" %>
    <%= link_to "Voltar para categorias", categorias_path, class: "btn btn-danger" %>
  </div>
<% end %>
